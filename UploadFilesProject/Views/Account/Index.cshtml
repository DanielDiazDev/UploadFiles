
<h2 id="toggleText">Registro</h2>
<form id="registerForm" style="display: block;" method="post" >

    <div class="form-group">
        <label for="Name">Nombre</label>
        <input type="text" id="txtName" name="Name" class="form-control">
    </div>

    <div class="form-group">
        <label for="LastName">Apellido</label>
        <input type="text" id="txtLastName" name="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label for="UserName">Nombre de Usuario</label>
        <input type="text" id="txtUserName" name="UserName" class="form-control">

    </div>

    <div class="form-group">
        <label for="Email">Correo Electrónico</label>
        <input type="text" id="txtEmail" name="Email" class="form-control">
    </div>

    <div class="form-group">
        <label for="PasswordHash">Contraseña</label>
        <input type="password" id="txtPassword" name="PasswordHash" class="form-control">
    </div>
    <input type="button" class="btn btn-primary" value="Registrarse" id="btnRegisterUser" />
</form>




<form id="loginForm" style="display: none;" method="post">
    <div class="form-group">
        <label for="UserName">Nombre de Usuario</label>
        <input type="text" id="txtUserNameLogin" name="UserName" class="form-control">
    </div>

    <div class="form-group">
        <label for="Password">Contraseña</label>
        <input type="password" id="txtPasswordLogin" name="PasswordHash" class="form-control">
    </div>

    <input type="button" class="btn btn-primary" value="Login" id="btnLoginUser" />
</form>

<input type="button" class="btn btn-primary" value="Cambiar a Inicio de Sesión" id="btnToggle" />

<script src="~/js/account.js" type="text/javascript"></script>